    "keywords": ["email", "validation", "verification", "email validation"],
    "homepage": "https://neverbounce.com",
    "require": {
        "php": ">=7.1.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Mollick",
            "email": "mike@neverbounce.com"
        },
        {
            "name": "Ankur Pandit",
            "email": "ankur@neverbounce.com"
        }
    ],
    "autoload" : {
        "psr-4" : {
            "NeverBounce\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^0.11.6",
        "phpunit/phpunit": "^7.0",
        "squizlabs/php_codesniffer": "3.*"
    }
}
